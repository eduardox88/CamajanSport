@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="page-content">
        <!-- begin PAGE TITLE AREA -->
        <!-- Use this section for each page's title and breadcrumb layout. In this example a date range picker is included within the breadcrumb. -->
        <div class="row">
            <div class="col-xs-12">
                <div class="page-title">
                    <h1>
                        Mantenimiento Noticias
                        @*<small>Deportes</small>*@
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Mantenimiento Noticias</li>
                        @*<li class="pull-right">
                                <div id="reportrange" class="btn btn-green btn-square date-picker">
                                    <i class="fa fa-calendar"></i>
                                    <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                                </div>
                            </li>*@
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- end PAGE TITLE AREA -->
        <div class="row" id="tblNoticia">
            <div class="col-lg-12">
                <div class="portlet portlet-orange">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4><i class="fa fa-exchange fa-fw"></i> Listado de Noticias</h4>
                        </div>
                        <div class="portlet-widgets">
                            <a data-toggle="collapse" data-parent="#accordion" href="#transactionsPortlet"><i class="fa fa-chevron-down"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="transactionsPortlet" class="panel-collapse collapse in">
                        <div class="portlet-body">
                            <div class="table-responsive dashboard-demo-table">
                                <table class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>

                                            <th>Id</th>
                                            <th>Título</th>
                                            <th>Contenido</th>
                                            <th>Activa</th>
                                            <th>Fecha Ingreso</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblNoticias"></tbody>
                                </table>
                            </div>

                            <button class="btn btn-orange btn-md" onclick="nuevaNoticia()">
                                Nueva Noticia
                            </button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <br>
        <br>
        <form id="frmNuevaNoticia" sty style="width:100%">
            <!-- Flex Modal -->
            @*<div class="modal fade modal-lg" id="flexModal" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="flexModalLabel">Nueva Noticia</h4>
                        </div>
                        <div class="modal-body">*@

                            <div class="row">
                                <div class="col-xs-1">
                                    <input type="hidden" id="hdfId" />
                                    <input type="hidden" id="hdfFechaIngreso" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-5">
                                    <label for="txtNombre">Título:</label>
                                    <input type="text" class="form-control" id="txtNombre" name="txtNombre" />
                                </div>
                                <div class="col-xs-5">
                                    <label for="chkActiva">Activa:</label>
                                    <input type="checkbox" class="form-control" checked="checked" id="chkActiva" name="chkActiva" />
                                </div>
                            </div>
                            <div>
                                    @*<label >Contenido:</label><br />*@
                                    <div class="summernote" id="txtContenido"></div>
                            </div>
                            <br />
                        @*</div>*@
                        @*<div class="modal-footer">
                            <button type="button" class="btn btn-default" onclick="LimpiarDiv()" data-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-green" id="btnGuardar" onclick="GuardarNoticia()">Guardar</button>
                        </div>*@
                    @*</div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>*@
        </form>
        <!-- /.modal -->
    </div>
    @section Scripts{
<script src="~/js/plugins/summernote/summernote.min.js"></script>
<script>    
    $(document).ready(function () {
        $('.summernote').summernote();
    });

    function LimpiarDiv() {
        $('#hdfId').val('');
        $('#hdfFechaIngreso').val('');
        $('#txtTitulo', '#frmNuevaNoticia').val('');
        $('#txtContenido', '#frmNuevaNoticia').val('');
        $('#chkActiva').prop('checked', true);
        $('#flexModal').modal('hide');
    }

    function nuevaNoticia()
    {
        $('#tblNoticia').('hide');
    }


</script>
    

}