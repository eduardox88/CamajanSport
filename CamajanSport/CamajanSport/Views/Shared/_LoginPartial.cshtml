
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span> Bienvenido @User.Identity.GetUserName() <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("RedirectUserToHomePage","Usuario")"><span class="glyphicon glyphicon-cog"></span> &nbsp; Ir al panel de control</a></li>
                <li><a href="@Url.Action("LogOff", "LogIn")"><span class="glyphicon glyphicon-log-in"></span> &nbsp; Cerrar Sesión</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <div class="navbar-form navbar-right">
        <div class="form-group">
            <input id="txtEmail" type="text" class="form-control" placeholder="Correo Electrónico">
        </div>
        <div class="form-group">
            <input id="txtPassword" type="password" class="form-control" placeholder="Clave">
        </div>
        <button id="LogIn" class="btn btn-default">Entrar</button>
        <div>
            <a style="color:white;" href="#"> <u>¿No puedes acceder a tu cuenta?</u></a>
        </div>
    </div>
}

