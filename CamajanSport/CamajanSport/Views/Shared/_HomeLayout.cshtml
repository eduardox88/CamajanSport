<script type="text/javascript">


    function SuccessOrError(data){

        if (data == true) {
            window.location.href = "@Url.Action("Index", "Home")";
        }
        else {
            swal({
                title: 'Lo sentimos!!',
                text: 'Debe de activar su cuenta mediante el correo de confirmación que le hemos enviado. Recuerde revisar en su buzón de entrada como en los correos no deseados.',
                type: 'error',
                confirmButtonText: "Cerrar"
            });
        }
    }

    $(document).ready(function () {
        $('#LogIn').click(function () {
            var objeto = {
                'correo': $('#txtEmail').val(),
                'password': $('#txtPassword').val()
            };
            AjaxCall('@Url.Action("SignIn","LogIn")', objeto, "", SuccessOrError, true);

        });

        @*$('#CrearUsuario').click(function () {
